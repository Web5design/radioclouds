package com.radioclouds.visualizer {	import flash.text.AntiAliasType;			import com.radioclouds.visualizer.gui.TextFieldSpecial;		import com.radioclouds.visualizer.gui.RoundedBox;			import flash.display.Sprite;		/**	 * @author matas	 */	public class ErrorPanel extends Sprite {		private var _titleText : TextFieldSpecial;		private var _background : RoundedBox;		public function ErrorPanel(msg : String) {			_background = new RoundedBox({height: 120, width: 200, color: 0x333333, radius: 0, alpha: 0.7});			addChild(_background);						_titleText = new TextFieldSpecial({				htmlText: msg,				multiline: true,				wordWrap: true,				width: _background.width - 20,				x: 10,				y: 8,				format: Styles.HEADLINE,				antiAliasType: AntiAliasType.NORMAL			});			addChild(_titleText);		}	}}