package com.radioclouds.visualizer.gui {	import flash.geom.Matrix;		import flash.display.BitmapData;	
	import flash.display.Sprite;	
	/**	 * @author matas	 */	public class RoundedBox extends Sprite {				public function RoundedBox(args : Object) {			super();						x = args.x || 0;			y = args.y || 0;			alpha = args.alpha || 1;			mouseEnabled = args.mouseEnabled || false;						var width : Number = args.width || 300;			var height : Number = args.height || 300;			var fillColor : Number = args.color || 0x000000;						var cornerRadius : Array = new Array();						if(typeof args.radius == "object") {				cornerRadius = [args.radius[0],args.radius[1],args.radius[2],args.radius[3]];			}else{				cornerRadius = [args.radius,args.radius,args.radius,args.radius];						}						var fillBitmap : BitmapData = args.bitmap;			var bitmapMatrix : Matrix = args.matrix;						graphics.lineStyle();									if(fillBitmap){ /* fill the box with bitmap */				graphics.beginBitmapFill(fillBitmap, bitmapMatrix, true);			}else{				graphics.beginFill(fillColor);			}									graphics.drawRoundRectComplex(0, 0, width, height, cornerRadius[0], cornerRadius[1], cornerRadius[2], cornerRadius[3]);			graphics.endFill();		}
	}}